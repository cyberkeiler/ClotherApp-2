<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="clotherapp.terramultimedia.de.clotherappii.MainMenu">


    <!-- Profil Icon-->
    <LinearLayout
        android:background="@drawable/bbuton_default_rounded"
        style="@style/bbtn_layout"
        android:id="@+id/bbtn_Profile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            style="@style/bbtn_icon"
            android:text=""
            android:id="@+id/bbtn_Profile_Icon" />

        <TextView
            style="@style/bbtn_txt"
            android:text="Dein Profil"
            android:id="@+id/bbtn_Profile_Txt" />
    </LinearLayout>

    <!--Button
        android:id="@+id/btnprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Dein Profil" /-->

    <!--Logout Icon-->
    <LinearLayout
        android:background="@drawable/bbuton_danger_rounded"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bbtn_Logout"
        android:clickable="true"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bbtn_Profile">

        <TextView
            style="@style/bbtn_icon"
            android:text=""
            android:id="@+id/bbtn_Logout_Icon"
            android:textColor="@color/white" />

        <TextView
            style="@style/bbtn_txt"
            android:text="Logout"
            android:id="@+id/bbtn_Logout_Txt"
            android:textColor="@color/white" />
    </LinearLayout>

    <!--Button
        android:id="@+id/btnlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnprofile"
        android:text="logout" /-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout4"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/bbtn_Profile"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/appIcon"
            android:gravity="center_horizontal">

            <Button
                style="@style/black_circle"
                android:text="@string/icon_not"
                android:id="@+id/not2"
                android:textSize="@dimen/fonsize_big"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <Button
                android:background="@drawable/bbuton_pink"
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="JETZT VOTEN"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white" />

            <Button
                style="@style/pink_circle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/icon_heart"
                android:id="@+id/hot2"
                android:textSize="@dimen/fonsize_big" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bbuton_default_rounded"
            style="@style/bbtn_layout"
            android:id="@+id/bbtn_NewOutfit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <TextView
                style="@style/bbtn_icon"
                android:text=""
                android:id="@+id/bbtn_NewOutfit_Icon" />

            <TextView
                style="@style/bbtn_txt"
                android:text="Neues Outfit"
                android:id="@+id/bbtn_NewOutfit_Txt" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bbuton_default_rounded"
            style="@style/bbtn_layout"
            android:id="@+id/btnn_Kleiderschrank"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <TextView
                style="@style/bbtn_icon"
                android:text=""
                android:id="@+id/bbtn_Kleiderschrank_Icon" />

            <TextView
                style="@style/bbtn_txt"
                android:text="Kleiderschrank"
                android:id="@+id/bbtn_Kleiderschrank_Txt" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bbuton_default_rounded"
            style="@style/bbtn_layout"
            android:id="@+id/bbtn_MyVotes"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <TextView
                style="@style/bbtn_icon"
                android:text=""
                android:id="@+id/bbtn_MyVotes_Icon" />

            <TextView
                style="@style/bbtn_txt"
                android:text="Deine Votes"
                android:id="@+id/bbtn_MyVotes_Txt" />
        </LinearLayout>

        <!--Button
            android:id="@+id/btnOutfits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neues Outfit"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dein Kleinderschrank"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deine votes"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal" /-->

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_marginEnd="30dp"
        android:id="@+id/linearLayout4"
        android:weightSum="1">

    </LinearLayout>

    <TextView
        android:id="@+id/textscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignTop="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Hallo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="0.77"
        android:layout_toStartOf="@+id/bbtn_Logout" />

</RelativeLayout>
