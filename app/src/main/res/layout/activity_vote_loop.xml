<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="clotherapp.terramultimedia.de.clotherappii.VoteLoop">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOT"
        android:id="@+id/btnhot"
        android:layout_marginBottom="91dp"
        android:textSize="@dimen/fonsize_big"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnnot" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOT"
        android:id="@+id/btnnot"
        android:layout_marginStart="43dp"
        android:textSize="@dimen/fonsize_big"
        android:textColor="@color/color_red"
        android:layout_alignTop="@+id/btnhot"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_heart"
        android:id="@+id/btnhot2"
        android:textSize="@dimen/fonsize_big"
        android:textColor="@color/white"
        android:background="@color/pink"
        android:layout_below="@+id/btnnot"
        android:layout_alignEnd="@+id/btnhot" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_not"
        android:id="@+id/btnnot2"
        android:textSize="@dimen/fonsize_big"
        android:textColor="@color/color_white"
        android:background="@color/color_black"
        android:layout_below="@+id/btnnot"
        android:layout_alignStart="@+id/btnnot" />
</RelativeLayout>
